{
  "name": "pp-app",
  "version": "1.0.0",
  "description": "people-post frontend",
  "homepage": "https://github.com/people-post/pp-app#readme",
  "bugs": {
    "url": "https://github.com/people-post/pp-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/people-post/pp-app.git"
  },
  "license": "MIT",
  "author": "",
  "type": "module",
  "main": "src/index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "build": "npm run build:web2 && npm run build:web3 && npm run build:sw",
    "build:web2": "vite build --config vite.config.web2.ts",
    "build:web3": "node build-web3.js",
    "build:sw": "node build-sw.js",
    "dev:web2": "vite --config vite.config.web2.ts",
    "clean": "rm -rf obj dist",
    "package": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@noble/ed25519": "^1.7.3",
    "@scure/bip32": "^2.0.1",
    "bip32-ed25519": "^0.0.5",
    "bip39": "^3.1.0",
    "buffer": "^6.0.3",
    "pp-api": "git+https://github.com/people-post/pp-api.git"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "cbor-x": "^1.6.0",
    "esbuild": "^0.19.12",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "webrtc-adapter": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
